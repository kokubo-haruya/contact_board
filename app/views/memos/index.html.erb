<p id="notice"><%= notice %></p>

<h1>けいあずのお知らせ板</h1>
<br><br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Memo</th>
      <th>Name</th>
      <th>Posting_Date</th>
      <th colspan="3"></th>

  </thead>
  

  <tbody>
    <% @memos.each do |memo,key| %>
      <tr>
        <td><%= memo.title %></td>
        <td><%= simple_format(memo.memo) %></td>
        <td><%= memo.name %></td>
        <td><%= Time.at(key.to_i) %></td>
        <td><%= link_to 'Show', memo %></td>
      </tr>
    <% end %>
  </tbody>
</table>
